<div class="post_detail">
<p><%= @post.title  %></p>
<p><%= @user.name %></p>
<p><%= @post.LikesCounter %></p>
<p><%= @post.CommentsCounter %></p>

<% @comments.each do |comment| %>
<p><%= comment.text %>  <%= comment.author.name %></p>
<% end %>

<%= form_with model: @comments, url: user_post_comments_path(post_id: @post.id) do |form| %>
<div><%= form.text_area :text, placeholder: "Share your thoughts here." %></div>
<div><%= form.submit 'Add Comment' %></div>
<% end %>

<%= form_with model: @likes, url: user_post_likes_path(post_id: @post.id) do |form| %>
<div><%= form.submit 'Like this Post' %></div>
<% end %>
</div>